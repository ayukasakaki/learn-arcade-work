                speedBump = random.randrange(1, 11)
                print("you have refilled your food")
                print("your Roach is rested")
                assassin_distance()
                print("hunger is 0")

            elif userChoice.lower() == "e":
                print_status()
                assassin_distance()

            else:
                print("invalid input")
                print("now you have to start over, idiot.")
                continue

            if speedBump == 2:
                print("there is a bystander in the way! press X to kill him or Y to wait until he passes")
                userChoice = input('what is your choice? ')
                done = False
                while not done:
                    if userChoice.lower() == "x":
                        killCount += 1
                        print("kill count is", killCount)
                        done = True
                    elif userChoice.lower() == "y":
                        assassin1Distance += 6
                        assassin2Distance += 5
                        assassin_distance()
                        done = True
                    else:
                        print("invalid input")
                        print("now you have to start over, idiot.")
                        continue

            if speedBump == 8:
                print("there is a bystander in the way! press X to kill him or Y to wait until he passes")
                userChoice = input('what is your choice? ')
                done = False
                while not done:
                    if userChoice.lower() == "x":
                        killCount += 1
                        print("kill count is", killCount)
                        done = True
                    elif userChoice.lower() == "y":
                        assassin1Distance += 10
                        assassin2Distance += 5
                        assassin_distance()
                        done = True
                    else:
                        print("invalid input")
                        print("now you have to start over, idiot.")
                        continue

            if hunger >= 7:
                print("you died of hunger")
                print("press P to play again or any other key to quit")
                userChoice = input('what is your choice? ')
                if userChoice.lower() == "p":
                    continue
                else:
                    break

            if 6 > hunger > 4 and True:
                print("You are hungry")

            if assassin1Distance <= 15 and True:
                print("assassin 1 is getting close")

            if assassin1Distance <= 15 and True:
                print("assassin two is getting close")

            if assassin1Distance <= 0:
                print("assassin 1 has caught and killed you")
                print("press P to play again or any other key to quit")
                userChoice = input('what is your choice? ')
                if userChoice.lower() == "p":
                    continue
                else:
                    break

            if assassin2Distance <= 3:
                print("assassin 2 has gotten in range and shot you")
                print("press P to play again or any other key to quit")
                userChoice = input('what is your choice? ')
                if userChoice.lower() == "p":
                    continue
                else:
                    break

            if 9 >= roachExhaustion > 5:
                print("Roach is tired")

            if food <= 0:
                print("warning: you have no food left")

            if chest == 17:
                print("you found an chest!")
                roachExhaustion = 0
                food = 3
                hunger = 0
                spells += 3
                print("you have restocked your food")
                print("Roach is rested")
                print("hunger is 0")

            if killCount >= 12:
                print("you have been too bloodthirsty. Your clan rejects you.")
                print("press P to play again or any other key to quit")
                userChoice = input('what is your choice? ')
                if userChoice.lower() == "p":
                    continue
                else:
                    break

            if milesTraveled >= 100 and True:
                print("you finished the game and won! well done.")
                print("press P to play again or any other key to quit")
                userChoice = input('what is your choice? ')
                if userChoice.lower() == "p":
                    continue
                else:
                    break

            if roachExhaustion >= 10:
                print("Roach died. You now have to run on foot.")
                while True:
                    print("""
                    A. Eat some food
                    B. Ahead at moderate speed.
                    C. Ahead full speed.
                    D. Stop for the night.
                    E. Status check
                    G. Attack people in your way
                    Q. Quit.\n""")
                    userChoice = input('what is your choice? ')
                    if userChoice.lower() == "q":
                        break

                    elif userChoice.lower() == "a":
                        food = food - 1
                        assassin1Distance -= random.randrange(1, 11)
                        assassin2Distance -= random.randrange(1, 7)
                        speedBump = random.randrange(1, 11)
                        assassin_distance()
                        print("you have", food, "food left")

                    elif userChoice.lower() == "b":
                        hunger += 1
                        milesTraveled += 7
                        roachExhaustion += 2
                        assassin1Distance -= random.randrange(1, 11)
                        assassin2Distance -= random.randrange(1, 7)
                        speedBump = random.randrange(1, 11)
                        print("hunger is", hunger)
                        print("miles traveled is", milesTraveled)
                        assassin_distance()
                        chest = random.randrange(1, 16)

                    elif userChoice.lower() == "c":
                        hunger += 1
                        milesTraveled += 10
                        roachExhaustion += 3
                        assassin1Distance -= random.randrange(1, 11)
                        assassin2Distance -= random.randrange(1, 7)
                        speedBump = random.randrange(1, 11)
                        print("your hunger is", hunger)
                        print("miles traveled is", milesTraveled)
                        assassin_distance()
                        chest = random.randrange(1, 18)

                    elif userChoice.lower() == "d":
                        food = 3
                        assassin1Distance -= random.randrange(1, 19)
                        assassin2Distance -= random.randrange(1, 15)
                        hunger = 0
                        speedBump = random.randrange(1, 11)
                        print("you have refilled your food")
                        assassin_distance()
                        print("hunger is 0")

                    elif userChoice.lower() == "e":
                        print("hunger is", hunger)
                        print("miles traveled is", milesTraveled)
                        print("food in canteen is", food)
                        assassin_distance()

                    else:
                        print("invalid input")
                        print("now you have to start over, idiot.")
                        continue

                    if speedBump == 2:
                        print("there is a bystander in the way! press X to kill him or Y to wait until he passes")
