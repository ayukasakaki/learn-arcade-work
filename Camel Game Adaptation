import random

print("Welcome to the game, 'Killers Who Practice Cardio!' Here is a brief introduction to this game:")
print('You are a mage who is the target of a pair of assassins.\n'
      'assassin 1 is fast but can only kill you when once they are right next to you\n'
      'assassin 2 is slower but can shoot and kill you within the range of 5 miles\n')

print('To survive, read carefully: \n'
      '1. you must outrun the assassins on your horse, Roach, and get to the magic forest at the edge of the kingdom.'
      '2. There, you will be safe. There are 150 miles in the kingdom. Get to the forest without being killed. \n'
      '3. If it rains, you will not go as quickly.\n'
      '4. If Roach dies, you can run on foot. You are slower than Roach. \n'
      '5. The assassins move at different speeds, and have different ways of killing you. \n'
      '6. You will get hungry, and if you starve, you will obviously die. So be careful. \n'
      '7. Since I, the creator of the game, understand the cruel nature of my audience, you can attack people \n'
      '8. If you kill too many people (12 or more), your wizard clan will banish you. Have morals.\n'
      'Good luck.\n ')

milesTraveled = 0
hunger = 0
food = 3
roachExhaustion = 0
assassin1Distance = 20
assassin2Distance = 20
assassin3Distance = 20
weather = 0
chest = 0
spells = 3
speedBump = 0
killCount = 0


def assassin_distance():
    print("assassin 1 is", assassin1Distance, "miles behind you")
    print("assassin 2 is", assassin2Distance, "miles behind you")


def print_status():
    print("roach's exhaustion is", roachExhaustion)
    print("hunger is", hunger)
    print("miles traveled is", milesTraveled)
    print("food in canteen is", food)
    print("assassin 1 is", assassin1Distance, "miles behind you")
    print("assassin 2 is ", assassin2Distance, "miles behind you")


while True:
    print("""
    A. Eat some food
    B. Ahead at moderate speed.
    C. Ahead full speed.
    D. Stop for the night.
    E. Status check
    F. Generate a mirage using a spell to distract the assassins
    Q. Quit.\n""")
    userChoice = input('what is your choice? ')
    if userChoice.lower() == "q":
        break

    elif userChoice.lower() == "a":
        food = food - 3
        assassin1Distance -= random.randrange(1, 11)
        assassin2Distance -= random.randrange(1, 7)
        speedBump = random.randrange(1, 11)
        assassin_distance()
        print("you have", food, "food left")

    elif userChoice.lower() == "b":
        hunger += 1
        milesTraveled += 17
        roachExhaustion += 2
        assassin1Distance -= random.randrange(1, 11)
        assassin2Distance -= random.randrange(1, 7)
        speedBump = random.randrange(1, 11)
        print("hunger is", hunger)
        print("miles traveled is", milesTraveled)
        assassin_distance()
        chest = random.randrange(1, 16)
        weather = random.randrange(1, 20)

    elif userChoice.lower() == "c":
        hunger += 1
        milesTraveled += 23
        roachExhaustion += 3
        assassin1Distance -= random.randrange(1, 11)
        assassin2Distance -= random.randrange(1, 7)
        speedBump = random.randrange(1, 11)
        print("your hunger is", hunger)
        print("miles traveled is", milesTraveled)
        assassin_distance()
        chest = random.randrange(1, 18)
        weather = random.randrange(1, 20)

    elif userChoice.lower() == "d":
        roachExhaustion = 0
        food = 3
        assassin1Distance -= random.randrange(1, 15)
        assassin2Distance -= random.randrange(1, 9)
        hunger = 0
        speedBump = random.randrange(1, 11)
        print("you have refilled your food")
        print("your Roach is rested")
        assassin_distance()
        print("hunger is 0")

    elif userChoice.lower() == "e":
        print_status()

    elif userChoice.lower() == "f":
        assassin1Distance += 15
        assassin2Distance += 10
        spells -= 1
        speedBump = random.randrange(1, 11)
        print("you have used a spell to generate a mirage and distract the assassins. congrats, wizard.")
        print("you have", spells, "spells left")
        assassin_distance()

    else:
        print("invalid input")
        print("now you have to start over, idiot.")
        continue

    if speedBump == 2:
        print("there is a bystander in the way! press X to kill him or Y to wait until he passes")
        userChoice = input('what is your choice? ')
        done = False
        while not done:
            if userChoice.lower() == "x":
                killCount += 1
                print("kill count is", killCount)
                done = True
            elif userChoice.lower() == "y":
                assassin1Distance += 6
                assassin2Distance += 5
                assassin_distance()
                done = True
            else:
                print("invalid input")
                print("now you have to start over, idiot.")
                continue

    if speedBump == 8:
        print("there is a bystander in the way! press X to kill him or Y to wait until he passes")
        userChoice = input('what is your choice? ')
        done = False
        while not done:
            if userChoice.lower() == "x":
                killCount += 1
                print("kill count is", killCount)
